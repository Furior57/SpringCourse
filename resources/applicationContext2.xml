<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">
    <!--Здесь мы определим два разных бина, один будет singletone, второй prototype, синтаксис
    простой не будем дополнительно его рассматривать-->
    <bean id="myPet"
          class="spring_introduction.animal.Cat"
          init-method="init"
          destroy-method="destroy">
    </bean>
    <bean id="myPet2"
          class="spring_introduction.animal.Dog"
          scope="prototype">
    </bean>

    <bean id="myPerson"
          class="spring_introduction.animal.Person">
        <constructor-arg ref="myPet"/>
    </bean>
</beans>